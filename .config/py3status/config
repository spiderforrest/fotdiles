nvidia_smi {
	on_error = "hide"
    format_gpu = '{temperature.gpu}C, '
    format_gpu += '{memory.used} {memory.used_unit} \@ '
    format_gpu += '{memory.used_percent:.1f}%'
}


# shows AUR and pac's updates
arch_updates {
	cache_timeout = 1000
	hide_if_zero = true
	format = "Syu:{aur}/{pacman}"
}

spotify {
	button_next = 3
	button_play_pause = 1
	button_previous = 8
	format_down = ""
	color_paused = '#E89383'
	format = "{title}"
	format_down = "/"
	format_stopped = "/"
}

async_script {
	script_path = "/home/spider/bin/sextime -l -x '.' -z '&'"
}

group clock {
	async_script {
		script_path = "/home/spider/bin/sextime -l -x '.' -z '&'"
	}

	tztime local {
			format = "%Y-%m-%d, %H:%M:%S"
	}

    clock est {
        format = "wrk: {America/New_York}"
        format_time = "%H:%M:%S"
}
