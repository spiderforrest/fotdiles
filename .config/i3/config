# i3config v4

# font's up here for py3status
font pango:Product Sans Regular 10, FontAwesome 10
bar {
	position top
	mode dock
	hidden_state hide
	modifier none
	status_command py3status

colors {
	#class     			border  backgr. text    indicator child_border
	separator 			#444444
	background 			#222222
	statusline 			#dedede
	focused_workspace 	#099101 #099101 #ffffff #099101
	active_workspace 	#6e9173 #6e9173 #ffffff #6e9171
	inactive_workspace 	#222222 #222222 #099101
	urgent_workspace 	#eb709b #eb709b #ffffff
   }
strip_workspace_numbers yes
}


# misc exec/assigns
set $mod Mod4
set $run exec --no-startup-id
set $pykill exec --no-startup-id killall -s USR1 py3status
floating_modifier $mod
set $ws0 "0:~"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10:0"
set $ws11 "11:-"
set $ws12 "12:="
$run ~/.config/i3/audio
$run light -s sysfs/backlight/acpi_video0 -S 20
exec_always --no-startup-id feh --bg-fill ~/.config/i3/fancyb.png
#exec_always --no-startup-id feh --bg-scale ~/.config/i3/$(ls ~/.config/i3 | grep .png | shuf -n 1) # shufs pngs in config folder
$run setxkbmap -option caps:backspace
$run xset r 66
$run redshift
$run keepassxc
for_window [class="KeePassXC"] move scratchpad
for_window [class="discord"] move to workspace $ws11
for_window [class="Ripcord"] move to workspace $ws11
for_window [class="Spotify"] move to workspace $ws12
new_window pixel 5
hide_edge_borders both

# misc binds
bindsym $mod+z 				bar mode toggle
bindsym $mod+Shift+r		restart
bindsym $mod+BackSpace 		kill
bindsym $mod+f 				fullscreen
bindsym XF86LaunchA	 		floating toggle
bindsym $mod+space 			focus mode_toggle
bindsym XF86LaunchB			$run flameshot gui
bindsym $mod+Return 		$run alacritty
bindsym $mod+q 				$run qutebrowser
bindsym $mod+shift+s		$run firejail --net=none --noprofile spotify
bindsym $mod+d 				$run j4-dmenu-desktop --term="alacritty"
bindsym $mod+p 				[class="KeePassXC"] scratchpad show
bindsym $mod+Mod1+shift+k	$run toggleLaptopKeeb

# change focus
bindsym $mod+h	   			focus left
bindsym $mod+j     			focus down
bindsym $mod+k     			focus up
bindsym $mod+l     			focus right
bindsym $mod+Left  			focus left
bindsym $mod+Down  			focus down
bindsym $mod+Up    			focus up
bindsym $mod+Right 			focus right

# move focused window
bindsym --release $mod+Shift+h 		move left
bindsym --release $mod+Shift+j		move down
bindsym --release $mod+Shift+k 		move up
bindsym --release $mod+Shift+l 		move right
bindsym --release $mod+Shift+Left 	move left
bindsym --release $mod+Shift+Down 	move down
bindsym --release $mod+Shift+Up 	move up
bindsym --release $mod+Shift+Right 	move right

# switch to workspace
bindsym $mod+grave			workspace number $ws0
bindsym $mod+1 				workspace number $ws1
bindsym $mod+2 				workspace number $ws2
bindsym $mod+3 				workspace number $ws3
bindsym $mod+4 				workspace number $ws4
bindsym $mod+5 				workspace number $ws5
bindsym $mod+6 				workspace number $ws6
bindsym $mod+7 				workspace number $ws7
bindsym $mod+8 				workspace number $ws8
bindsym $mod+9 				workspace number $ws9
bindsym $mod+0 				workspace number $ws10
bindsym $mod+minus			workspace number $ws11
bindsym $mod+equal			workspace number $ws12

# move focused container to workspace
bindsym $mod+Shift+grave		move container to workspace number $ws0
bindsym $mod+Shift+1 			move container to workspace number $ws1
bindsym $mod+Shift+2 			move container to workspace number $ws2
bindsym $mod+Shift+3 			move container to workspace number $ws3
bindsym $mod+Shift+4 			move container to workspace number $ws4
bindsym $mod+Shift+5 			move container to workspace number $ws5
bindsym $mod+Shift+6 			move container to workspace number $ws6
bindsym $mod+Shift+7 			move container to workspace number $ws7
bindsym $mod+Shift+8 			move container to workspace number $ws8
bindsym $mod+Shift+9 			move container to workspace number $ws9
bindsym $mod+Shift+0 			move container to workspace number $ws10
bindsym $mod+Shift+minus		move container to workspace number $ws11
bindsym $mod+Shift+equal		move container to workspace number $ws12

# containers
bindsym $mod+bracketleft 		split v
bindsym $mod+bracketright 		split h
bindsym $mod+c 					layout toggle
bindsym $mod+o 					layout splitv
bindsym $mod+i 					layout splith
bindsym $mod+mod1+h 			resize shrink width 10 px or 10 ppt
bindsym $mod+mod1+j 			resize grow height 10 px or 10 ppt
bindsym $mod+mod1+k 			resize shrink height 10 px or 10 ppt
bindsym $mod+mod1+l 			resize grow width 10 px or 10 ppt

# Pulse Audio controls
bindsym XF86AudioRaiseVolume 		$run "pactl set-sink-volume 0 +5% ; pactl set-sink-volume 1 +5%" ; $pykill
bindsym XF86AudioLowerVolume 		$run "pactl set-sink-volume 0 -5% ; pactl set-sink-volume 1 -5%" ; $pykill
bindsym $mod+XF86AudioRaiseVolume 	$run "pactl set-sink-volume 0 +1% ; pactl set-sink-volume 1 +1%" ; $pykill
bindsym $mod+XF86AudioLowerVolume 	$run "pactl set-sink-volume 0 -1% ; pactl set-sink-volume 1 -1%" ; $pykill
bindsym XF86AudioMute 				$run "pactl set-sink-mute 0 toggle ; pactl set-sink-mute 1 toggle" ; $pykill
bindsym $mod+XF86AudioMute 			$run "pactl set-source-mute 1 toggle ; pactl set-source-mute 2 toggle" ; $pykill

# backlights #7 is the minimum bc idk, idc
bindsym XF86MonBrightnessUp 		$run light -s sysfs/backlight/acpi_video0 -A 2 ; $pykill
bindsym XF86MonBrightnessDown 		$run light -s sysfs/backlight/acpi_video0 -U 2 ; $pykill
bindsym XF86KbdBrightnessUp 		$run light -s sysfs/leds/smc::kbd_backlight -A 1 
bindsym XF86KbdBrightnessDown 		$run light -s sysfs/leds/smc::kbd_backlight -U 1

# colors!
#class                  border  backgr. text    indicator child_border
client.focused          #30aa30 #30aa30 #ffffff #30aa30   #30aa30
client.focused_inactive #6d956d #6d956d #ffffff #6d956d   #6d956d
client.unfocused        #222222 #222222 #099101 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #2f343a
client.placeholder      #000000 #0c0c0c #ffffff #000000   #000000

client.background       #03360a
